# Demo Environment Configuration

# Basic demo setup - users can experiment without affecting production
NODE_ENV=demo
PORT=3000
AI_ORCHESTRATOR_PORT=3001

# Demo mode settings
DEMO_MODE=true
DEMO_USER_LIMIT=100
DEMO_CHARACTERS_PER_USER=5
DEMO_API_CALLS_PER_HOUR=50

# Mock AI API keys for demo (safe placeholder values)
OPENAI_API_KEY=demo-openai-key
ANTHROPIC_API_KEY=demo-anthropic-key
GOOGLE_API_KEY=demo-google-key
MISTRAL_API_KEY=demo-mistral-key

# Demo database (in-memory or lightweight)
MONGODB_URI=mongodb://localhost:27017/ai-character-creator-demo

# Demo authentication
JWT_SECRET=demo-jwt-secret-for-experimentation-only
SESSION_SECRET=demo-session-secret

# Demo Stripe keys (test mode)
STRIPE_SECRET_KEY=sk_test_demo
STRIPE_PUBLISHABLE_KEY=pk_test_demo

# Demo email service (log to console instead of sending)
SENDGRID_API_KEY=demo-sendgrid-key
SENDGRID_FROM_EMAIL=demo@ai-character-creator.com
EMAIL_MODE=console

# Frontend URLs for demo
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5000
REACT_APP_DEMO_MODE=true

# Feature flags for demo
ENABLE_SUBSCRIPTION_FEATURES=false
ENABLE_PAYMENT_PROCESSING=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_USAGE_LIMITS=true
ENABLE_DEMO_RESET=true

# Demo AI model settings
DEFAULT_MODEL=gpt-3.5-turbo
FALLBACK_MODEL=gemini-pro
MAX_TOKENS=1000
TEMPERATURE=0.7
MOCK_AI_RESPONSES=true

# Demo image generation
ENABLE_IMAGE_GENERATION=true
MOCK_IMAGE_GENERATION=true
DEFAULT_IMAGE_STYLE=fantasy

# Demo social features
ENABLE_SOCIAL_SHARING=false
ENABLE_CHARACTER_GALLERY=true
ENABLE_PUBLIC_CHARACTERS=true

# Demo analytics
ENABLE_ANALYTICS=true
ANALYTICS_MODE=demo
